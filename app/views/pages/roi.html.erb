<link rel="stylesheet" title="Standard" href="/assets/calculator.css" type="text/css" media="screen" />
<link rel="stylesheet" title="Standard" href="/assets/common.css" type="text/css" media="screen" />
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span4">
			<div align="center">
				<h1 id="calculator">ROI Calculator</h1>
			</div>
			<div align="center">
				<form class="form-horizontal" role="form" method="post" action="/roi/calculate">
				<div id="box1">
				<h1 id="title">Cost:</h1>
					<input id="name" type="num" name="coc" placeholder="Cost of Campaign">
					<input id="name" type="num" name="cpr" placeholder="Cost Per Redemption">
					<input id="name" type="num" name="redemptions" placeholder="Number of Redemptions">
				</div>
				<br><br>
				<div id="box2">
					<input id="name" type="num" name="rev" placeholder="Revenue per Redemption">
				</div>
					<button id="btnGo"  class="btn-cal btn-large btn-primary">Calculate</button> 
				</form>
			</div>
		</div>
	</div>
	<div class="span6">
			<div id="calculator">
				<!-- Screen and clear key -->
				<div class="top">
					<span class="clear">C</span>
					<div class="screen"></div>
				</div>
				
				<div class="keys">
					<!-- operators and other keys -->
					<span>7</span>
					<span>8</span>
					<span>9</span>
					<span class="operator">+</span>
					<span>4</span>
					<span>5</span>
					<span>6</span>
					<span class="operator">-</span>
					<span>1</span>
					<span>2</span>
					<span>3</span>
					<span class="operator">รท</span>
					<span>0</span>
					<span>.</span>
					<span class="eval">=</span>
					<span class="operator">x</span>
				</div>
			</div>
	</div>
</div>
